<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.media.*?>
<?import javafx.scene.shape.*?>

<AnchorPane fx:id="rootPane" prefHeight="607.0" prefWidth="342.0" stylesheets="@short-player.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.project.youtube.Client.Controller.ShortPlayerController">
   <children>
      <MediaView fx:id="mediaView" fitHeight="607.0" fitWidth="342.0" />
      <BorderPane fx:id="borderPane" layoutX="-1.0" prefHeight="607.0" prefWidth="342.0">
         <top>
            <HBox spacing="10.0" BorderPane.alignment="CENTER">
               <children>
                  <BorderPane fx:id="playBtnBorderPane" onMouseClicked="#playBtnMouseClicked" prefHeight="50.0" prefWidth="50.0">
                     <center>
                        <Button fx:id="playBtn" mnemonicParsing="false" onAction="#playBtnAction" prefHeight="20.0" prefWidth="20.0" BorderPane.alignment="CENTER">
                           <BorderPane.margin>
                              <Insets />
                           </BorderPane.margin>
                           <padding>
                              <Insets left="2.0" />
                           </padding>
                        </Button>
                     </center>
                     <HBox.margin>
                        <Insets left="10.0" top="10.0" />
                     </HBox.margin>
                  </BorderPane>
                  <HBox fx:id="muteBtnHBox" alignment="CENTER" minWidth="50.0" onMouseEntered="#muteBtnHBoxEnter" onMouseExited="#muteBtnHBoxExit" prefHeight="50.0" spacing="10.0">
                     <children>
                        <Button fx:id="muteBtn" mnemonicParsing="false" onAction="#muteBtnAction" prefHeight="20.0" prefWidth="22.0" />
                     </children>
                     <padding>
                        <Insets left="10.0" right="10.0" />
                     </padding>
                     <HBox.margin>
                        <Insets top="10.0" />
                     </HBox.margin>
                  </HBox>
               </children>
            </HBox>
         </top>
         <bottom>
            <VBox BorderPane.alignment="CENTER">
               <children>
                  <VBox>
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Circle id="profilePic" fx:id="profileImage" fill="#ffffff00" radius="25.0" stroke="#e63535" strokeType="INSIDE" />
                              <Label fx:id="handleLbl" text="\@handle" textFill="WHITE" />
                              <Button fx:id="subscribeBtn" mnemonicParsing="false" onAction="#subscribeBtnAction" style="-fx-background-radius: 20;" text="Subscribe">
                                 <cursor>
                                    <Cursor fx:constant="HAND" />
                                 </cursor>
                              </Button>
                           </children>
                           <padding>
                              <Insets bottom="5.0" left="10.0" />
                           </padding>
                        </HBox>
                        <HBox>
                           <children>
                              <Label fx:id="descriptionLbl" text="Description" textFill="WHITE" />
                           </children>
                           <padding>
                              <Insets bottom="5.0" left="10.0" />
                           </padding>
                        </HBox>
                     </children>
                  </VBox>
                  <HBox alignment="CENTER">
                     <children>
                        <Slider fx:id="shortSlider" onMousePressed="#seekShort" prefHeight="14.0" prefWidth="357.0" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </bottom>
      </BorderPane>
   </children>
</AnchorPane>
